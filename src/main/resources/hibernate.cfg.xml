<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration SYSTEM "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.SQLServerDialect</property>
        <property name="hibernate.connection.driver_class">com.microsoft.sqlserver.jdbc.SQLServerDriver</property>

        <property name="hibernate.connection.url">jdbc:sqlserver://localhost:1433;database=cinema</property>
        <property name="hibernate.connection.username">programmer</property>
        <property name="hibernate.connection.password">programmer</property>
        <property name="show_sql">true</property>

    </session-factory>
</hibernate-configuration>